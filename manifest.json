{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/icon_x48.png",
    "96": "icons/icon_x96.png"
  },

  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/"],
      "js": ["index.js"]
    }
  ]
}
